<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sensor_status_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:longClickable="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/preset_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:ems="10"
            android:inputType="textPersonName"
            android:textSize="24sp"
            android:importantForAutofill="no" />

        <Button
            android:id="@+id/delete_preset_button"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="@string/delete_x" />

    </LinearLayout>

    <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/custom_length_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/radio_custom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Custom" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/label_total_duration"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="@string/num_cycles" />

                    <EditText
                        android:id="@+id/text_total_duration"
                        android:layout_width="72dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="number" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/label_on_duration"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="@string/duration_on" />

                    <EditText
                        android:id="@+id/text_on_duration"
                        android:layout_width="72dp"
                        android:layout_height="wrap_content"

                        android:ems="10"
                        android:inputType="numberDecimal" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/label_off_duration"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="@string/duration_off" />

                    <EditText
                        android:id="@+id/text_off_duration"
                        android:layout_width="72dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="numberDecimal" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/label_intensity"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="@string/intensity" />

                    <EditText
                        android:id="@+id/text_intensity"
                        android:layout_width="72dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="numberDecimal" />


                </LinearLayout>


            </LinearLayout>

        <LinearLayout
            android:id="@+id/csv_length_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_weight="1.3"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radio_csv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/from_csv" />

            <TextView
                android:id="@+id/current_file_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/no_current_file" />

            <Spinner
                android:id="@+id/csv_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:dropDownSelector="@color/colorAccent2"
                android:minHeight="24dp"
                android:padding="8dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/sample_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="vertical">

            <Switch
                android:id="@+id/set_default_switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:text="@string/set_default" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/label_sample_accel"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/accel_sample" />

                <EditText
                    android:id="@+id/text_sample_accel"
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="numberDecimal" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/label_sample_gyro"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/gyro_sample" />

                <EditText
                    android:id="@+id/text_sample_gyro"
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="numberDecimal" />

            </LinearLayout>

        </LinearLayout>

    </RadioGroup>

</LinearLayout>